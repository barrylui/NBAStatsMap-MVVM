<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/team_stats_layout"
    android:padding="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team1_recyclerview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/team1_header"
        android:layout_height="wrap_content"
        android:layout_above="@id/team1_recyclerview"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="TEAM 1"
        android:layout_marginBottom="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team2_recyclerview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_above="@id/team1_header" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/team2_header"
        android:layout_height="wrap_content"
        android:layout_above="@id/team2_recyclerview"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:text="TEAM 2"
        android:layout_marginBottom="1dp"/>

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/radarchart"
        android:layout_width="285dp"
        android:layout_height="285dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freethrowDisplayTextView"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="FREE THROW (%)"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/team2_header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threepointDisplayTextView"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="3-POINT (3PM)"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/freethrowDisplayTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reboundsDisplayTextView"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="REBOUNDS (RPG)"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/threepointDisplayTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assistsDisplayTextView"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="ASSIST (APG)"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/reboundsDisplayTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defensiveDisplayTextView"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="DEFENSE (O PPG)"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/assistsDisplayTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offensiveDisplayTextView"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="OFFENSE (PPG)"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/defensiveDisplayTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offenseTeam1RankTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/offensiveDisplayTextView"
        android:textColor="@color/white"
        android:text="1st"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defenseTeam1RankTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/defensiveDisplayTextView"
        android:textColor="@color/white"
        android:text="4th"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assistsTeam1RankTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/assistsDisplayTextView"
        android:textColor="@color/white"
        android:text="10"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reboundsTeam1RankTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/reboundsDisplayTextView"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="11sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threepointTeam1RankTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/threepointDisplayTextView"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freethrowTeam1RankTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/freethrowDisplayTextView"
        android:textColor="@color/white"
        android:text="2"
        android:textSize="11sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offenseTeam1ValueTextView"
        android:layout_toLeftOf="@id/offenseTeam1RankTextView"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@id/offensiveDisplayTextView"
        android:text="112.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defenseTeam1ValueTextView"
        android:layout_alignRight="@id/offenseTeam1ValueTextView"
        android:layout_alignBottom="@id/defensiveDisplayTextView"
        android:text="100.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assistsTeam1ValueTextView"
        android:layout_alignRight="@id/offenseTeam1ValueTextView"
        android:layout_alignBottom="@id/assistsDisplayTextView"
        android:text="20.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reboundsTeam1ValueTextView"
        android:layout_alignRight="@id/offenseTeam1ValueTextView"
        android:layout_alignBottom="@id/reboundsDisplayTextView"
        android:text="30.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threepointTeam1ValueTextView"
        android:layout_alignRight="@id/offenseTeam1ValueTextView"
        android:layout_alignBottom="@id/threepointDisplayTextView"
        android:text="9.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freethrowTeam1ValueTextView"
        android:layout_alignRight="@id/offenseTeam1ValueTextView"
        android:layout_alignBottom="@id/freethrowDisplayTextView"
        android:text="94.3"
        android:textSize="11sp"
        android:textColor="@color/white"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offenseTeam2RankTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/offensiveDisplayTextView"
        android:textColor="@color/white"
        android:text="1st"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defenseTeam2RankTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/defensiveDisplayTextView"
        android:textColor="@color/white"
        android:text="4th"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assistsTeam2RankTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/assistsDisplayTextView"
        android:textColor="@color/white"
        android:text="10"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reboundsTeam2RankTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/reboundsDisplayTextView"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="11sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threepointTeam2RankTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/threepointDisplayTextView"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freethrowTeam2RankTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/freethrowDisplayTextView"
        android:textColor="@color/white"
        android:text="2"
        android:textSize="11sp"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offenseTeam2ValueTextView"
        android:layout_toRightOf="@id/offenseTeam2RankTextView"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@id/offensiveDisplayTextView"
        android:text="112.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defenseTeam2ValueTextView"
        android:layout_alignLeft="@id/offenseTeam2ValueTextView"
        android:layout_alignBottom="@id/defensiveDisplayTextView"
        android:text="100.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assistsTeam2ValueTextView"
        android:layout_alignLeft="@id/offenseTeam2ValueTextView"
        android:layout_alignBottom="@id/assistsDisplayTextView"
        android:text="20.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reboundsTeam2ValueTextView"
        android:layout_alignLeft="@id/offenseTeam2ValueTextView"
        android:layout_alignBottom="@id/reboundsDisplayTextView"
        android:text="30.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threepointTeam2ValueTextView"
        android:layout_alignLeft="@id/offenseTeam2ValueTextView"
        android:layout_alignBottom="@id/threepointDisplayTextView"
        android:text="9.8"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freethrowTeam2ValueTextView"
        android:layout_alignLeft="@id/offenseTeam2ValueTextView"
        android:layout_alignBottom="@id/freethrowDisplayTextView"
        android:text="94.3"
        android:textSize="11sp"
        android:textColor="@color/white"/>

</RelativeLayout>